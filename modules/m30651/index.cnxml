                    </m:mrow>
                  </m:mrow>
                </m:mstyle>
                <m:mrow/>
              </m:mrow>
              <m:annotation encoding="StarMath 5.0"> size 12{U rSub { size 8{ ital "xi"} } ="log" rSub { size 8{2} } p rSub { size 8{i} } ="log" rSub { size 8{2} } m,} {}</m:annotation>
            </m:semantics>
